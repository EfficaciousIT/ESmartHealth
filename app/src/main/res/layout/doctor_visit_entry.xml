<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/sp_DoctorName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_spinner"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#c5c5c5">
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/tv_visitdate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/selector_bg_edit"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@drawable/bg_input_cursor"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:inputType="text"
                    android:hint="Visit Date" />
            </android.support.design.widget.TextInputLayout>

                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#c5c5c5"
                        android:layout_weight="1.2">
                    <EditText
                        android:id="@+id/et_medicineName1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="4dp"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:background="@drawable/selector_bg_edit"
                        android:textColor="@color/colorAccent"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:hint="Medicine"
                        />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#c5c5c5"
                        android:layout_weight="1.2">
                    <EditText
                        android:id="@+id/et_medicineName2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="4dp"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:background="@drawable/selector_bg_edit"
                        android:textColor="@color/colorAccent"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:hint="Medicine"
                       />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#c5c5c5"
                        android:layout_weight="1.2">
                    <EditText
                        android:id="@+id/et_medicineName3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="4dp"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:background="@drawable/selector_bg_edit"
                        android:textColor="@color/colorAccent"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:hint="Medicine"
                       />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#c5c5c5"
                        android:layout_weight="1.2">
                    <EditText
                        android:id="@+id/et_medicineName4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="4dp"
                        android:inputType="text"
                        android:padding="12dp"
                        android:background="@drawable/selector_bg_edit"
                        android:textColor="@color/colorAccent"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:hint="Medicine"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                       />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#c5c5c5"
                        android:layout_weight="1.2">
                    <EditText
                        android:id="@+id/et_medicineName5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="4dp"
                        android:inputType="text"
                        android:padding="12dp"
                        android:background="@drawable/selector_bg_edit"
                        android:textColor="@color/colorAccent"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:hint="Medicine"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        />
                </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                    <LinearLayout android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#c5c5c5"
                            android:layout_weight="1">
                    <EditText
                        android:id="@+id/et_Description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_bg_edit"
                        android:elevation="4dp"
                        android:hint="Description"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorAccent"
                        android:textCursorDrawable="@drawable/bg_input_cursor" />
                        </android.support.design.widget.TextInputLayout>
                        <ImageButton
                            android:id="@+id/Attachment"
                            android:elevation="4dp"
                            android:layout_margin="18dp"
                            android:padding="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/attachment"/>
                    </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1.5"
                    android:id="@+id/tv_MedicineTime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:text="Medicine Time"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    />
            <RelativeLayout

                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:id="@+id/tv_medicine1Time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorAccent"
                    android:background="@mipmap/alarmclock"
                    android:padding="5dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textStyle="bold"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_toEndOf="@+id/tv_medicine1Time1"
                    android:id="@+id/tv_medicine1Time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@mipmap/alarmclock"
                    android:padding="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"/>
                <TextView
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_toEndOf="@+id/tv_medicine1Time2"
                    android:id="@+id/tv_medicine1Time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorAccent"
                    android:background="@mipmap/alarmclock"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
            </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:id="@+id/iv_attachment1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/attachment" />
                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:layout_margin="5dp"
                    android:visibility="gone"
                    android:id="@+id/iv_attachment2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/attachment" />
                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:id="@+id/iv_attachment3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/attachment" />
                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:id="@+id/iv_attachment4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/attachment" />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#c5c5c5">
            <TextView
                android:id="@+id/tv_nxtvisitdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selector_bg_edit"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@drawable/bg_input_cursor"
                android:elevation="4dp"
                android:padding="12dp"
                android:textSize="16dp"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:hint="Next Visit Date" />
            </android.support.design.widget.TextInputLayout>
                    <Switch
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:layout_margin="8dp"
                        android:id="@+id/Switch_Alert"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:checked="false"
                        android:layout_height="wrap_content"
                        android:text="Alarm (Notify me for the Medicine)  "
                        android:layout_weight="1"/>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:id="@+id/middle_linear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_below="@+id/buttom">
                <Button
                    android:id="@+id/submit"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="Submit"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>