<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:orientation="vertical">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/Name_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DRName"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="textview"
                android:textColor="@color/colorPrimaryDark" />

        </RelativeLayout>


            <TextView
                android:id="@+id/tv_visitdate"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="textview"
                android:textColor="@color/colorPrimaryDark" />


        <TextView
            android:id="@+id/tv_nxtdate"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:text="textview1"
            android:textColor="@color/red" />


            <TextView
                android:id="@+id/Med1"
                android:layout_margin="5dp"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="textview"
                android:layout_weight="0"
                android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/Med2"
            android:layout_margin="5dp"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="textview"
            android:layout_weight="0"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/Med3"
            android:layout_margin="5dp"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="textview"
            android:layout_weight="0"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/Med4"
            android:layout_margin="5dp"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="textview"
            android:layout_weight="0"
            android:textColor="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/Med5"
            android:layout_margin="5dp"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="textview"
            android:layout_weight="0"
            android:textColor="@color/colorPrimaryDark" />
        <LinearLayout
            android:id="@+id/attachmntrelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"

            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/attachmnt1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/profile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/attachmnt2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/profile"

                android:layout_marginStart="10dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/attachmnt3"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:src="@mipmap/profile"
                android:layout_marginStart="10dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/attachmnt4"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:src="@mipmap/profile"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edit3" />
    <ImageButton
        android:id="@+id/alarm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_btn"
        android:layout_margin="5dp"
        android:background="@drawable/alarm" />
    </RelativeLayout>
</android.support.v7.widget.CardView>