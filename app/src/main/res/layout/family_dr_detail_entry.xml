<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<android.support.v7.widget.CardView-->
            <!--android:id="@+id/cv"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/profile_layout"-->
            <!--android:layout_marginTop="3dp"-->
            <!--app:cardCornerRadius="6dp"-->
            <!--app:cardElevation="3dp"-->
            <!--app:cardUseCompatPadding="true">-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#c5c5c5">
                    <EditText
                        android:id="@+id/et_DrName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="4dp"
                        android:inputType="text"
                        android:padding="12dp"
                        android:background="@drawable/selector_bg_edit"
                        android:textColor="@color/colorAccent"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:hint="Name" />
                </android.support.design.widget.TextInputLayout>
                <RadioGroup
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:background="@drawable/bg_box"
                    android:id="@+id/radioGroup_gender"
                    android:layout_width="fill_parent"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/radiobuttonMale"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Male"
                        android:checked="true"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radioButtonFemale"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="20dp"
                        android:text="Female"
                        android:textColor="@color/black" />


                </RadioGroup>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#c5c5c5">
                    <EditText
                        android:id="@+id/address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_bg_edit"
                        android:textColor="@color/colorAccent"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:elevation="4dp"
                        android:padding="12dp"
                        android:inputType="textMultiLine"
                        android:hint="Address" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#c5c5c5">
                    <EditText
                        android:id="@+id/et_DrMobileNo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="4dp"
                        android:padding="12dp"
                        android:inputType="number"
                        android:background="@drawable/selector_bg_edit"
                        android:textColor="@color/colorAccent"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:hint="Mobile No." />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#c5c5c5">
                    <EditText
                        android:id="@+id/et_Dr_emailId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/selector_bg_edit"
                        android:textColor="@color/colorAccent"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:elevation="4dp"
                        android:padding="12dp"
                        android:inputType="textEmailAddress"
                        android:hint="Email Id" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#c5c5c5">
                    <EditText
                        android:id="@+id/et_Dr_Qualification"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/selector_bg_edit"
                        android:textColor="@color/colorAccent"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:elevation="4dp"
                        android:hint="Qualification"
                        android:inputType="text"
                        android:padding="12dp" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_box"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/et_dr_availableTime"
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:elevation="4dp"
                            android:inputType="textMultiLine"
                            android:padding="12dp"
                            android:text="Dr.Timing :"
                            android:textColor="@color/textcolor"
                            android:textCursorDrawable="@drawable/bg_input_cursor" />

                       <TextView
                           style="@android:style/TextAppearance.DeviceDefault.Medium"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_margin="5dp"
                           android:elevation="4dp"
                           android:inputType="textMultiLine"
                           android:padding="12dp"
                           android:hint="From"
                           android:id="@+id/from_timing"
                           android:textColor="@color/textcolor"
                           android:textCursorDrawable="@drawable/bg_input_cursor"
                           android:layout_toEndOf="@+id/et_dr_availableTime"/>
                        <TextView
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:elevation="4dp"
                            android:inputType="textMultiLine"
                            android:padding="12dp"
                            android:text="-"
                            android:id="@+id/dash"
                            android:textColor="@color/textcolor"
                            android:textCursorDrawable="@drawable/bg_input_cursor"
                            android:layout_toEndOf="@+id/from_timing"/>
                        <TextView
                            style="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:elevation="4dp"
                            android:inputType="textMultiLine"
                            android:padding="12dp"
                            android:hint="To"
                            android:id="@+id/to_timing"
                            android:textColor="@color/textcolor"
                            android:textCursorDrawable="@drawable/bg_input_cursor"
                            android:layout_toEndOf="@+id/dash"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:id="@+id/middle_linear"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/buttom">

                    <Button
                        android:id="@+id/submit"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/button_style"
                        android:text="Submit"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        <!--</android.support.v7.widget.CardView>-->
    </LinearLayout>
</ScrollView>